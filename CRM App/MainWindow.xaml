<Window
    x:Class="CRM_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ctWinUi="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid" HorizontalAlignment="Center" VerticalAlignment="Stretch">
        <Grid.Children>
            <ctWinUi:DataGrid x:Name="DataGrid"
                        ItemsSource="{Binding Customers}"
                        AutoGenerateColumns="False"
                        CanUserSortColumns="True"
                        SelectionMode="Single"
                        IsReadOnly="True"
                        VerticalScrollBarVisibility="Auto">
                <ctWinUi:DataGrid.Columns>
                    <ctWinUi:DataGridTextColumn Header="Name" Binding="{Binding Name}" Tag="Name" />
                    <ctWinUi:DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Tag="Email" />
                    <ctWinUi:DataGridTextColumn Header="Country" Binding="{Binding Country}" Tag="Country" />
                    <ctWinUi:DataGridTextColumn Header="LTV" Binding="{Binding LTV}" Tag="LTV" />
                </ctWinUi:DataGrid.Columns>
            </ctWinUi:DataGrid>
        </Grid.Children>
    </Grid>
</Window>
